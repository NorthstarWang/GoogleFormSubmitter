@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<!--begin::Content-->
<div class="flex-row-fluid ml-lg-8">
    <!--begin::Card-->
    <div class="card card-custom card-stretch">
        <!--begin::Header-->
        <div class="card-header py-3">
            <div class="card-title align-items-start flex-column">
                <h3 class="card-label font-weight-bolder text-dark">@ViewData["Title"]</h3>
                <span class="text-muted font-weight-bold font-size-sm mt-1">Update your personal informaiton</span>
            </div>
        </div>
        <!--end::Header-->
        <!--begin::Form-->

        <form id="profile-form" method="post">
            <div class="card-body">
                <partial name="_StatusMessage" model="Model.StatusMessage" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label text-right" asp-for="Username"></label>
                    <div class="col-lg-9 col-xl-6">
                        <input class="form-control form-control-lg form-control-solid" asp-for="Username" type="text" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label text-right" asp-for="Input.PhoneNumber"></label>
                    <div class="col-lg-9 col-xl-6">
                        <input asp-for="Input.PhoneNumber" class="form-control form-control-lg form-control-solid" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                </div>
            <div class="card-footer">
                <button type="submit" id="update-profile-button" class="btn btn-primary font-weight-bolder mr-2">Save Changes</button>
            </div>
            <!--end::Form-->

        </form>
    </div>

</div>
<!--end::Content-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}